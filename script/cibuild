#!/bin/bash
# script/cibuild: Build the application for CI testing.

set -e

cd "$(dirname "$0")/.."

echo "==> Building Jekyll site..."
bundle exec jekyll build --verbose

echo "==> Checking for broken links and HTML issues..."
# You can add htmlproofer or other validators here if needed
# bundle exec htmlproofer ./_site --disable-external

echo "==> Build complete!"
